@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sciendo Music Web</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles",required:false)
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <script type="text/javascript">
            var config = {
                contextPath: '@Url.Content("~")'
            };
        </script>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/knockout")
        @Scripts.Render("~/bundles/signalR")
        @if(true)
        {
            Html.RenderPartial("~/Views/Shared/Feedback.cshtml",SciendoConfiguration.StatisticsConfiguration.FeedbackUrl);
        }
        <header>
            <div class="content-wrapper">
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Query", "Index", "Query")</li>
                            <li id="indexingMenu">@Html.ActionLink("Index", "Index", "Home")</li>
                            <li id="playlistMenu">@Html.ActionLink("Build Playlist", "Buildplaylist", "Query")</li>
                            <li id="analysisMenu">@Html.ActionLink("Statistics", "Index", "Statistics")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <div class="float-left site-title">
                @ViewBag.Title
            </div>
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
                <p>&copy; @DateTime.Now.Year - Sciendo Music Web</p>
            </footer>
        <script src='@SciendoConfiguration.StatisticsConfiguration.FeedbackUrl/hubs'></script>
        @Scripts.Render("~/bundles/feedback")
        <script>
    $.connection.hub.url = '@SciendoConfiguration.StatisticsConfiguration.FeedbackUrl';
    var appProxy = $.connection.feedbackHub;
    var feedbackvm = new feedbackViewModel(appProxy);
    $.connection.hub.start().done(feedbackvm.init);
    ko.applyBindings(feedbackvm, document.getElementById("feedbackArea"));

</script>

        @RenderSection("scripts", required: false)
    </body>
</html>
